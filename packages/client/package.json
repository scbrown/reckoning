{
  "name": "@reckoning/client",
  "version": "0.1.0",
  "private": true,
  "description": "Reckoning game client",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@reckoning/shared": "workspace:*",
    "@stiwi/pixelsrc-wasm": "^0.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^1.6.1",
    "jsdom": "^27.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.3"
  }
}
